RelativeLayout:
    orientation: 'horizonatal'
    Button:
        id: back_btn_layout
        pos_hint: {"x": 0.0, "top": 1.0}
        background_color: 0, 0, 0, 0
        size_hint: 0.1, 0.1
        background_normal: "assets/back_button.png"
        on_release: app.on_exit_btn()
        Image:
            source: "assets/back_button_normal.png" if self.parent.state == "normal" else "assets/back_button_down.png"
            pos: self.parent.pos
            size: self.parent.size

    BoxLayout:
        Button:
            id: disable_button
            background_color:0,.5,.5,0.2
            text:"settings"
            size_hint_y: .4
            on_release: app.on_exit_btn()

        ToggleButton:
            background_color:(0,150,50,.3) if self.state  == "normal" else (255,0,0,.3)
            text: "START"
            size_hint_y: .4
            on_state: app.on_action_button(self)
            group: 'action button'
                